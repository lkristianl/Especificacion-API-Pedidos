      "Pedido": {
        "title": "Pedido",
        "type": "object",
        "properties": {
          "pedido": {
            "type": "object",
            "properties": {
              "idPedido": {
                "type": "integer",
                "format": "int64",
                "example": 111111111,
                "minimum": 1
              },
              "tipo": {
                "type": "string",
                "description": "indica si es pedido de compra o de venta",
                "enum": [
                  "compra",
                  "venta"
                ]
              },
              "producto": {
                "$ref": "#/components/schemas/Producto"
              },
              "cantidad": {
                "type": "integer",
                "format": "int32",
                "example": 23,
                "minimum": 1
              },
              "fechaCompra": {
                "type": "string",
                "format": "date-time"
              },
              "estado": {
                "type": "string",
