        "properties": {
          "producto": {
            "type": "object",
            "minProperties": 1,
            "properties": {
              "idProducto": {
                "type": "integer",
                "format": "int64",
                "example": 123456789,
                "minimum": 1
              },
              "descripcion": {
                "type": "string"
              },
              "categoria": {
